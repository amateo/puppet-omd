<Component Thruk::Backend>
<%- @peers.sort.each do | name, port | -%>
    <peer>
        name    = <%= name %>
        type    = livestatus
        <options>
          peer          = localhost:<%= port %>
        </options>
    </peer>
<%- end -%>
</Component>
